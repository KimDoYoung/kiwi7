    "version": "0.2.0",
    "configurations": [
        {
            "name": "현재파일",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd" : "${fileDirname}",
            "justMyCode": false,
            "env": {"PYTHONPATH": "${workspaceFolder}"}
        },
        {
            "name": "kiwi7-USER",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "KIWI7_MODE": "user"
            },
            "args": [
                "backend.main:app",
                "--reload",
                "--port",
                "8002" // 원하는 포트 번호로 변경
            ],
            "jinja": true,
            "justMyCode": true,
            "console": "integratedTerminal"
        },
{
            "name": "kiwi7-fedora",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "KIWI7_MODE": "fedora"
            },
            "args": [
                "backend.main:app",
                "--reload",
                "--port",
                "8002" // 원하는 포트 번호로 변경
            ],
            "jinja": true,
            "justMyCode": true,
            "console": "integratedTerminal"
        }        
    ]
}